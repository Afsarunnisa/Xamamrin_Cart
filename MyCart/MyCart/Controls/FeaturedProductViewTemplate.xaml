<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
                xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            x:Class="MyCart.Controls.FeaturedProductViewTemplate">
	<ContentView.Content>

          <Frame IsClippedToBounds="True"
              HasShadow="True"
              BackgroundColor="White">

            <Frame.OutlineColor>
                <OnPlatform x:TypeArguments="Color"
                        Android="#cccccc"
                        iOS="#cccccc"/>
           </Frame.OutlineColor>

            <Frame.Margin>
                <OnPlatform x:TypeArguments="Thickness"
                         Android="6,6,6,0" iOS="6,6,6,0"/>
            </Frame.Margin>

            <StackLayout Padding="10" Orientation="Horizontal"  >
                <Image Source="{Binding thumb}" HeightRequest="100" WidthRequest="100" BackgroundColor="Olive"
                        VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" Rotation="90"/>

                <Label FontAttributes="Bold"
                           BackgroundColor="Aqua"
                           FontSize="16" Rotation = "90"
                           Text="{Binding name, Mode = TwoWay}">
                <Label.LineBreakMode>
                    <OnPlatform x:TypeArguments="LineBreakMode" 
                                      Android="NoWrap" iOS="TailTruncation"/>
                </Label.LineBreakMode>
                </Label>

                  <Label Text="{Binding price}" BackgroundColor="Navy" Rotation="90" />

            </StackLayout>
            

