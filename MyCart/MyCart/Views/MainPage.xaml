<?xml version="1.0" encoding="UTF-8"?>
<MasterDetailPage xmlns="http://xamarin.com/schemas/2014/forms"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            x:Class="MyCart.Views.MainPage">

    <MasterDetailPage.Master>
        <ContentPage Title = "test">

            <StackLayout Orientation="Vertical">

                    <StackLayout BackgroundColor="Aqua" HeightRequest="75">

                      <Label Text="menu tite" TextColor="Black"/>
                    
                    </StackLayout>

                    <ListView x:Name="menuListView" RowHeight="60" ItemSelected="OnMenuItemSelected">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <ViewCell>
                                    <StackLayout Orientation="Horizontal" VerticalOptions="FillAndExpand">
                                        <Image  Source="{Binding icon}" HeightRequest="40" WidthRequest="40"/>
                                        <Label  Text="{Binding Title}" YAlign="Center" />
                                    
                                    </StackLayout>
                                </ViewCell>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                
            </StackLayout>

        </ContentPage>

    </MasterDetailPage.Master>


    
</MasterDetailPage>
