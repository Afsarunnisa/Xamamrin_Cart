<?xml version="1.0" encoding="UTF-8"?>
<MasterDetailPage xmlns="http://xamarin.com/schemas/2014/forms"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            x:Class="MyCart.Views.MainPage">

    <MasterDetailPage.Master>
        <ContentPage Title = "â˜°" Icon="menu">

            <StackLayout x:Name="mainLayout" Orientation="Vertical" BackgroundColor="#FFFFFF" Opacity="0.7">

                    <StackLayout HeightRequest="65" BackgroundColor = "#77D065" >
                      <Label Margin="30" TextColor="White" Text="Menu" FontAttributes="Bold" />
                    </StackLayout>

                    <ListView x:Name="menuListView" RowHeight="60" ItemSelected="OnMenuItemSelected" 
                                Margin="0,0,0,0" BackgroundColor="#FFFFFF" Opacity="0.7">
                        <ListView.ItemTemplate>
                            <DataTemplate >
                                <ViewCell>
                                    <StackLayout Padding = "20,0,0,0" Orientation="Horizontal" VerticalOptions="FillAndExpand">
                                        <Image Aspect="AspectFit" Source="{Binding Icon}" HeightRequest="25" WidthRequest="25"/>
                                        <Label  Text="{Binding Title}" YAlign="Center" />
                                    
                                    </StackLayout>
                                </ViewCell>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                
            </StackLayout>

        </ContentPage>

    </MasterDetailPage.Master>


    
</MasterDetailPage>
